{
  "info": {
    "_postman_id": "geo-collection-001",
    "name": "UrbaGIStory API - Geometries",
    "description": "Endpoints for geometry management (points, lines, polygons).\n\nNote: Geometry creation and coordinate editing is done via QGIS only.\nThis collection handles metadata updates (name, description) and deletions.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Points",
      "item": [
        {
          "name": "Get All Points",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/geometries/points?page=1&pageSize=20",
              "host": ["{{baseUrl}}"],
              "path": ["api", "geometries", "points"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "pageSize",
                  "value": "20"
                },
                {
                  "key": "searchTerm",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "hasLinkedEntities",
                  "value": "true",
                  "disabled": true
                }
              ]
            },
            "description": "Get a paginated list of point geometries with optional filtering."
          },
          "response": []
        },
        {
          "name": "Get Point by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/geometries/points/{{geoPointId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "geometries", "points", "{{geoPointId}}"]
            },
            "description": "Get a specific point geometry by ID. Response includes coordinates and linked entities count."
          },
          "response": []
        },
        {
          "name": "Update Point Metadata",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Point Name\",\n  \"description\": \"Updated description for this point\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/geometries/points/{{geoPointId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "geometries", "points", "{{geoPointId}}"]
            },
            "description": "Update a point's metadata (name, description only). Geometry coordinates can only be modified via QGIS."
          },
          "response": []
        },
        {
          "name": "Delete Point",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/geometries/points/{{geoPointId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "geometries", "points", "{{geoPointId}}"]
            },
            "description": "Delete a point geometry (soft delete). Linked entities will have their GeoPointId set to NULL automatically."
          },
          "response": []
        }
      ],
      "description": "Endpoints for point geometries management."
    },
